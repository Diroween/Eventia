        <activity
            android:name=".notification.NotificationSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".event.PreviousEventsActivity"
            android:exported="false" />
        <activity
            android:name=".event.EventOnCurrentDayActivity"
            android:exported="false" />
        <activity
            android:name=".event.EventEditorActivity"
            android:exported="false" />
        <activity
