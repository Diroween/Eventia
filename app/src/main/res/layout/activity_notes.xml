<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff79a"
    android:fitsSystemWindows="true"
    tools:context=".note.NotesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_notes"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffeca1"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toTopOf="@id/et_note_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=" ">

        <TextView
            android:id="@+id/tv_displayname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_tag_faces_128" />

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/baseline_save_alt_48"
            android:contentDescription="@string/app_name"
            android:fontFamily="@font/gabriela"
            android:padding="5dp"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_note_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="15dp"
        android:autofillHints=""
        android:fontFamily="@font/aclonica"
        android:hint="@string/title"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_notes" />

    <EditText
        android:id="@+id/et_note_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:autofillHints=""
        android:fontFamily="@font/aclonica"
        android:hint="@string/note"
        android:inputType="textMultiLine"
        android:maxLines="20"
        android:minHeight="48dp"
        android:overScrollMode="ifContentScrolls"
        android:padding="10dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_note_title" />

</androidx.constraintlayout.widget.ConstraintLayout>