<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".UserSettings">

    <ImageView android:id="@+id/iv_user_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/baseline_tag_faces_128"
        android:contentDescription="@string/app_name"/>

    <TextView android:id="@+id/tv_user_id_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_user_image"
        app:layout_constraintBottom_toTopOf="@id/tv_user_id"
        android:layout_marginTop="80dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/userid"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/gabriela"/>

    <TextView android:id="@+id/tv_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_id_title"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="15sp"
        android:fontFamily="@font/aclonica"/>

    <TextView android:id="@+id/tv_user_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_id"
        android:layout_marginTop="15dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/username"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/gabriela"/>

    <TextView android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name_title"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="15sp"
        android:fontFamily="@font/aclonica"/>

    <TextView android:id="@+id/tv_user_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        android:layout_marginTop="15dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/email"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/gabriela"/>

    <TextView android:id="@+id/tv_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_email_title"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="15sp"
        android:fontFamily="@font/aclonica"/>

    <TextView android:id="@+id/tv_txtbtn_change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="25dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:text="@string/changeimage"
        android:textSize="18sp"
        android:textColor="#FF6201"
        android:fontFamily="@font/aclonica"/>



</androidx.constraintlayout.widget.ConstraintLayout>